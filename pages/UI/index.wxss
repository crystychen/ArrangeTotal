/* pages/UI/index.wxss */
/* 列表媒体对象start */
.media-wrap {
  margin: 10rpx auto;
  border-radius: 20rpx;
  width: 90%;
  box-shadow: 4rpx 4rpx 30rpx 20rpx rgb(233, 233, 233);
}
/* 媒体对象自定义内容 */
.center-right {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.btn-wrap {
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img-wrap {
  width: 80rpx;
  height: 80rpx;
  position: relative;
}
.img-num {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: block;
  color: #ffffff;
  text-align: center;
}
.img-wrap > image {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #ccc;
  border-radius: 50%;
}
/* 列表媒体对象end */
/* 卡片样式补充start */
.num {
  color: #cf9f73;
  font-weight: bold;
  padding: 0 8rpx;
}
/* 卡片内容自定义 */
.num-row {
  width: 100%;
  margin-top: 40rpx;
}

.num-item {
  width: 33%;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

.num-item > text:first-child {
  color: #333;
  font-weight: bold;
  font-size: 34rpx;
}

.num-item > text:last-child {
  color: #c7c7cb;
}
.noborder {
  border: none;
}
/* 卡片样式补充end */