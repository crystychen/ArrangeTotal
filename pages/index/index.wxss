/**index.wxss**/


/* 顶部导航start */

.top-navigation {
    width: 100%;
    height: 120rpx;
    position: fixed;
    top: 0;
    background: #cf9f73;
    color: #ffffff;
    align-items: center;
    display: flex;
    flex-direction: row;
}

.top-navigation .title {
    text-align: center;
    width: 100%;
    color: #ffffff;
    height: 120rpx;
    line-height: 140rpx;
    vertical-align: middle;
    line-height: 140rpx;
}


/* 顶部导航end*/

.userinfo {
    /* display: flex;
  flex-direction: column;
  align-items: center; */
    padding: 30rpx 0;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.card-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.extra-infos {
    margin-left: 10rpx;
    display: inline-block;
    color: #8e8e93;
}

.num {
    color: #cf9f73;
    font-weight: bold;
    padding: 0 8rpx;
}

.num-row {
    width: 100%;
    /* margin-top: 40rpx; */
}

.num-item {
    width: 33%;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
}

.num-item>text:first-child {
    color: #333;
    font-weight: bold;
    font-size: 34rpx;
}

.num-item>text:last-child {
    color: #c7c7cb;
}